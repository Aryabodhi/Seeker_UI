<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileInfo"
    android:background="#ffffff">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar_misc" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:gravity="center"
                android:text="Date of birth, Gender and Phone cannot be changed once updated."
                android:textSize="18sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <EditText

                    android:layout_marginTop="10dp"
                    android:id="@+id/profile_name_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name*"
                    android:padding="10dp"
                    android:textColor="@color/TextColor"
                    android:textColorHint="#B8E697"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/selected_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp"
                    android:layout_marginRight="2.5dp"
                    android:background="@drawable/edittext_left_round_background"
                    android:hint="Date of birth*"
                    android:gravity="center"
                    android:textColorHint="#656566"
                    android:layout_weight="2"/>


                <ImageView
                    android:elevation="15dp"
                    android:textColor="#fff"
                    android:id="@+id/btn_select_date"
                    android:src="@drawable/edittext_right_round_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:stateListAnimator="@animator/elevation_animation"
                    android:clickable="true"
                    android:layout_marginStart="2.5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Select Date Of Birth" />



            </LinearLayout>

            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender*"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/male_text"
                    android:gravity="center"
                    android:elevation="15dp"
                    android:textColor="#fff"
                    android:background="@drawable/edittext_grey_left_round_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stateListAnimator="@animator/elevation_animation"
                    android:clickable="true"
                    android:textSize="20sp"
                    android:layout_marginStart="2.5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="MALE" />

                <TextView
                    android:id="@+id/female_text"
                    android:gravity="center"
                    android:elevation="15dp"
                    android:textColor="#fff"
                    android:background="@drawable/edittext_grey_right_round_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stateListAnimator="@animator/elevation_animation"
                    android:clickable="true"
                    android:textSize="20sp"
                    android:layout_marginStart="2.5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="FEMALE" />


            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"

                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText

                    android:layout_marginTop="10dp"
                    android:id="@+id/about_editText"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="About me"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textColor="@color/TextColor"
                    android:textColorHint="#B8E697"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height*"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.5dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                        <EditText
                            android:id="@+id/height_feet_editText"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Feet"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/TextColor"
                            android:textColorHint="#B8E697"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.5dp"
                        android:layout_weight="1"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                        <EditText
                            android:id="@+id/height_inches_editText"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Inches"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/TextColor"
                            android:textColorHint="#B8E697"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:layout_marginBottom="2.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/phone_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/TextColor"
                    android:textColorHint="#B8E697"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/location_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:padding="10dp"
                    android:textColor="@color/TextColor"
                    android:textColorHint="#B8E697"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Profession"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_all_round_background">

                <Spinner
                android:id="@+id/spinner_prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/currentProf"
                android:spinnerMode="dropdown"
                android:padding="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest Education"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_all_round_background">

        <Spinner
                android:id="@+id/spinner_edu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/highEdu"
                android:spinnerMode="dropdown"
                android:padding="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

        </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/update"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/gradient_blue_rounded"
                    android:text="UPDATE"
                    android:gravity="center"
                    android:padding="5dp"
                    android:foreground="?attr/selectableItemBackground"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>